<Window
    x:Class="S7PlcTester.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:S7PlcTester"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:S7PlcTester.ViewModels"
    Title="S7 Tester"
    Width="900"
    Height="350"
    d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel>
            <TextBlock
                Margin="5,5,0,0"
                FontSize="16"
                FontWeight="Bold"
                Text="Connect Info" />
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="200" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="10"
                    FontSize="20"
                    Text="IP" />
                <TextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="10"
                    FontSize="20" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10"
                    FontSize="20"
                    Text="PORT" />
                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10"
                    FontSize="20" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="10"
                    FontSize="20"
                    Text="SLOT" />
                <TextBox
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="10"
                    FontSize="20" />
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="10"
                    FontSize="20"
                    Text="RACK" />
                <TextBox
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="10"
                    FontSize="20" />
            </Grid>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button
                    Width="120"
                    Height="60"
                    Margin="10"
                    Content="DisConnect" />
                <Button
                    Width="120"
                    Height="60"
                    Margin="10"
                    Content="Connect" />
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBlock
                Margin="5,5,0,0"
                FontSize="16"
                FontWeight="Bold"
                Text="Try !!!" />
            <StackPanel Margin="0,20,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Margin="5"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text="Type" />
                    <ComboBox Grid.Row="1" Margin="5" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text="Pose" />
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5"
                        VerticalAlignment="Center"
                        FontSize="30" />
                    <TextBlock
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text="Size" />
                    <TextBox
                        Grid.Row="2"
                        Grid.Column="2"
                        Margin="5"
                        VerticalAlignment="Center"
                        FontSize="30" />
                    <TextBlock
                        Grid.Column="3"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text="Value" />
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="3"
                        Margin="5"
                        VerticalAlignment="Center"
                        FontSize="30"
                        IsReadOnly="True" />
                    <Button
                        Grid.Row="1"
                        Grid.Column="4"
                        Height="40"
                        Margin="5"
                        Content="READ" />
                </Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Margin="5"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text="Type" />
                    <ComboBox Grid.Row="1" Margin="5" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text="Pose" />
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5"
                        VerticalAlignment="Center"
                        FontSize="30" />
                    <TextBlock
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text="Size" />
                    <TextBox
                        Grid.Row="2"
                        Grid.Column="2"
                        Margin="5"
                        VerticalAlignment="Center"
                        FontSize="30" />
                    <TextBlock
                        Grid.Column="3"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text="Value" />
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="3"
                        Margin="5"
                        VerticalAlignment="Center"
                        FontSize="30" />
                    <Button
                        Grid.Row="1"
                        Grid.Column="4"
                        Height="40"
                        Margin="5"
                        Content="WRITE" />
                </Grid>
            </StackPanel>
            <StackPanel />
        </StackPanel>
    </Grid>
</Window>
